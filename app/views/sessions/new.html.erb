<div class="well login">
  <%= form_tag '/login' do %>
    <div class="logo">
      <h1>Flehr</h1>
      <small>A real-time chat app</small>
    </div>
    <div class="control-group">
      <%= label_tag :username, 'Pick a Username' %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-default login-button' %>
  <% end %>
</div>